{
  "manifest_version": 3,
  "name": "Google Calendar Multi-Select",
  "version": "1.0.0",
  "description": "Add multi-select functionality to Google Calendar for bulk delete and move operations",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://calendar.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "653049582169-7l9ad3er3g9g9se8mafdtdgqgtqhmbmv.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": [
        "src/content/state.js",
        "src/content/dom-utils.js",
        "src/content/ui.js",
        "src/content/messaging.js",
        "src/content/selection.js",
        "src/content/delete.js",
        "src/content/drag-move.js",
        "src/content/init.js"
      ],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
